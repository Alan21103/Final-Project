<style>
    body {
        background-color: #ffffff;
    }

    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        width: 400px;
    }

    .modal-actions button {
        margin: 10px;
    }

    .header-create-bundling {
        text-align: left;
        margin-top: 5vh;
        padding: 10px;
        background-color: #ffffff;
        border-bottom: 5px solid #FF7F50;
    }

    .header-create-bundling h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-left: 2vh;
    }

    .btn-link {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        background-color: #FF7F50;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
        cursor: pointer;
    }

    .btn-link:hover {
        background-color: white;
        color: #000;
    }

    .container {
        margin-top: 20px;
        max-width: 1200px;
    }

    .form-container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-section {
        display: flex;
        justify-content: space-between;
        gap: 20px;
    }

    .form-left,
    .form-right {
        flex: 1;
    }

    .form-label {
        font-weight: bold;
    }

    .upload-box {
        border: 2px dashed #000;
        padding: 20px;
        text-align: center;
        border-radius: 10px;
    }

    .upload-box p {
        margin: 0;
    }

    .btn-browse {
        background-color: black;
        color: white;
        margin-top: 10px;
    }

    .btn-create {
        background-color: black;
        color: white;
        width: 100%;
        margin-top: 20px;
    }

    .route-buttons .btn {
        background-color: white;
        border: 1px solid #000;
        border-radius: 20px;
        margin: 5px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="btn-link">
                <a href="/admin/bundling" class="fas fa-arrow-left" style="text-decoration: none; color: inherit;">
                </a>
            </div>
        </div>
        <div class="header-create-bundling">
            <h1>CREATE BUNDLING</h1>
        </div>
    </div>
    <form id="createBundleForm" class="form-container" enctype="multipart/form-data">
        <div class="form-section">
            <!-- Left Section -->
            <div class="form-left">
                <div class="mb-3">
                    <label class="form-label" for="bundleName">
                        Nama Bundle
                    </label>
                    <input class="form-control" id="bundleName" name="bundleName" placeholder="Masukkan Nama Bundle"
                        type="text" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="bundlePrice">
                        Bundle Price
                    </label>
                    <input class="form-control" id="bundlePrice" name="bundlePrice" placeholder="Masukkan Harga Bundle"
                        type="number" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">
                        Deskripsi
                    </label>
                    <textarea class="form-control" id="description" name="description" placeholder="Masukkan Deskripsi"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">
                        Lokasi
                    </label>
                    <textarea class="form-control" id="location" name="location" placeholder="Masukkan Lokasi"
                        required></textarea>
                </div>
            </div>

            <!-- Right Section -->
            <div class="form-right">
                <div class="mb-3">
                    <div class="upload-box">
                        <p>
                            Drag and drop images here
                        </p>
                        <p>
                            Or click to upload from your computer
                        </p>
                        <input class="form-control" type="file" name="image" accept="image/*" required />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">
                        Destinasi Route
                    </label>
                    <select class="form-control" name="destination" required>
                        <option value="Pulau Komodo">Pulau Komodo</option>
                        <option value="Bintan">Bintan</option>
                        <option value="Danau Toba">Danau Toba</option>
                        <option value="Labuan Bajo">Labuan Bajo</option>
                        <option value="Raja Ampat">Raja Ampat</option>
                        <option value="Mandalika">Mandalika</option>
                    </select>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-create" id="openModalButton">
            Create Bundle
        </button>
    </form>
</div>

<!-- Modal -->
<div class="modal" id="confirmationModal" style="display: none;">
    <div class="modal-content">
        <h2>Konfirmasi</h2>
        <p>Apakah Anda yakin ingin membuat bundling ini?</p>
        <div class="modal-actions">
            <button class="btn btn-danger" id="cancelModalButton">Batal</button>
            <button class="btn btn-success" id="submitFormButton">Ya, Lanjutkan</button>
        </div>
    </div>
</div>

<script>
    // Modal Elements
    const modal = document.getElementById('confirmationModal');
    const openModalButton = document.getElementById('openModalButton');
    const cancelModalButton = document.getElementById('cancelModalButton');
    const submitFormButton = document.getElementById('submitFormButton');
    const form = document.getElementById('createBundleForm');

    // Open Modal
    openModalButton.addEventListener('click', () => {
        modal.style.display = 'flex';
    });

    // Close Modal
    cancelModalButton.addEventListener('click', () => {
        modal.style.display = 'none';
    });

    // Submit Form
    submitFormButton.addEventListener('click', () => {
        modal.style.display = 'none';
        form.submit();
    });
</script>