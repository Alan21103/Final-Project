    <!-- Bundling Card 1 -->
    <div class="bundle-card">
        <img src="https://via.placeholder.com/80" alt="Image Placeholder">
        <div class="bundle-info">
            <h4>PAKET 1</h4>
            <p>Nikmati perjalanan hemat dengan bundle paket kami! Termasuk tiket, akomodasi, dan aktivitas seru untuk liburan tanpa ribet.</p>
            <span class="location">Mandalika</span>
        </div>
        <div class="bundle-price">Rp 189.000.00</div>
        <div class="bundle-actions">
            <button><i class="bi bi-pencil"></i></button>
            <button><i class="bi bi-trash"></i></button>
        </div>
    </div>

    <!-- Bundling Card 2 -->
    <div class="bundle-card">
        <img src="https://via.placeholder.com/80" alt="Image Placeholder">
        <div class="bundle-info">
            <h4>PAKET 2</h4>
            <p>Nikmati perjalanan hemat dengan bundle paket kami! Termasuk tiket, akomodasi, dan aktivitas seru untuk liburan tanpa ribet.</p>
            <span class="location">Danau Toba</span>
        </div>
        <div class="bundle-price">Rp 189.000.00</div>
        <div class="bundle-actions">
            <button><i class="bi bi-pencil"></i></button>
            <button><i class="bi bi-trash"></i></button>
        </div>
    </div>
</div>

<!-- Floating Add Button -->
<div class="add-bundle">
    <i class="bi bi-plus"></i>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
