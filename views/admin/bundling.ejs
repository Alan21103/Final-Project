<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
    }

    h2 {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }

    .bundle-card {
        display: flex;
        align-items: center;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    .bundle-card img {
        width: 100px;
        height: 100px;
        background-color: #e9ecef;
        border-radius: 10px;
        object-fit: cover;
    }

    .bundle-info {
        flex: 1;
        margin-left: 20px;
    }

    .bundle-info h4 {
        margin: 0 0 10px;
        font-size: 18px;
    }

    .bundle-info p {
        margin: 0;
        font-size: 14px;
        color: #555;
    }

    .bundle-info .location {
        margin-top: 10px;
        display: inline-block;
        background-color: #000;
        color: #fff;
        font-size: 12px;
        padding: 5px 10px;
        border-radius: 50px;
    }

    .bundle-price {
        font-weight: bold;
        font-size: 18px;
        margin-right: 20px;
    }

    .bundle-actions button {
        background: none;
        border: none;
        color: #000;
        font-size: 18px;
        margin-left: 10px;
        cursor: pointer;
    }

    .bundle-actions button:hover {
        color: #555;
    }

    .add-bundle {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 50px;
        height: 50px;
        background-color: #000;
        color: #fff;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 24px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }

    .add-bundle:hover {
        background-color: #333;
    }
</style>
<div class="container">
