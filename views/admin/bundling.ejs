<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 100px auto;
        padding: 20px;
    }

    .title {
        text-align: left;
        /* Teks rata kiri */
        margin-bottom: 5vh;
        /* Jarak bawah */
        padding: 0px;
        /* Padding */
        background-color: #ffffff;
        /* Warna latar belakang (opsional) */
        border-bottom: 5px solid #FF7F50;
        /* Garis bawah (opsional) */
    }

    .title h1 {
        font-size: 2rem;
        /* Ukuran font */
        font-weight: bold;
        /* Tebal font */
        color: #333;
        /* Warna teks */


        /* Hilangkan margin default */
    }

    .bundle-card {
        display: flex;
        align-items: center;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    .bundle-card img {
        width: 100px;
        height: 100px;
        background-color: #e9ecef;
        border-radius: 10px;
        object-fit: cover;
    }

    .bundle-info {
        flex: 1;
        margin-left: 20px;
    }

    .bundle-info h4 {
        margin: 0 0 10px;
        font-size: 18px;
    }

    .bundle-info p {
        margin: 0;
        font-size: 14px;
        color: #555;
    }

    .bundle-info .location {
        margin-top: 10px;
        display: inline-block;
        background-color: #000;
        color: #fff;
        font-size: 12px;
        padding: 5px 10px;
        border-radius: 50px;
    }

    .bundle-price {
        font-weight: bold;
        font-size: 18px;
        margin-left: 90px;
        margin-bottom: 75px;
    }

    .bundle-actions button {
        background: none;
        border: none;
        color: #000;
        font-size: 18px;
        margin-left: 10px;
        margin-top: 100px;
        cursor: pointer;
    }

    .bundle-actions button:hover {
        color: #555;
    }

    .btn-add {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 70px;
        height: 70px;
        background-color: #FF7F50;
        color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 50px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }

    .btn-add:hover {
        background-color: white;
        color: #000;
    }
</style>
<div class="container">
    <div class="title">
        <h1>VIEW BUNDLING</h1>
    </div>
    <div id="bundling-container">
        <% if (data && data.length> 0) { %>
            <% data.forEach(function(bundle) { %>
                <div class="bundle-card">
                    <img src="<%= bundle.Gambar %>" alt="Image Placeholder">
                    <div class="bundle-info">
                        <h4>
                            <%= bundle.Nama_paket %>
                        </h4>
                        <p>
                            <%= bundle.Deskripsi %>
                        </p>
                        <span class="location">Lokasi</span>
                    </div>
                    <div class="bundle-price">Rp <%= bundle.Harga %>
                    </div>
                    <div class="bundle-actions">
                        <!-- Edit Button with Icon -->
                        <button>
                            <a href="/admin/editbundling/<%= bundle.ID_Paket %>" class="btn btn-edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </button>
                        <!-- Delete Button with Icon -->
                        <button>
                            <a href="/admin/deletebundling/<%= bundle.ID_Paket %>" class="btn btn-delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </button>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <p>No bundling data available.</p>
                        <% } %>
    </div>
    <button>
        <a href="/admin/createbundling" class="btn btn-add">
            <i class="bi bi-plus-circle"></i> 
        </a>
    </button>

</div>

<!-- Add the Bootstrap Icons Library -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>