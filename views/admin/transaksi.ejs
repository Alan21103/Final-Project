<style>
    body {
        background-color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .container {
        margin-top: 100px;
        max-width: 1200px;
    }

    .header-transaksi-bundling {
        text-align: left;
        /* Teks rata kiri */
        margin-bottom: 10px;
        /* Jarak bawah */
        padding: 10px;
        /* Padding */
        background-color: #ffffff;
        /* Warna latar belakang (opsional) */
        border-bottom: 5px solid #FF7F50;
        /* Garis bawah (opsional) */
    }

    .header-transaksi-bundling h1 {
        font-size: 2rem;
        /* Ukuran font */
        font-weight: bold;
        /* Tebal font */
        color: #333;
        /* Warna teks */
        /* Hilangkan margin default */
    }

    .search-bar {
        background-color: #e9ecef;
        border-radius: 50px;
        padding: 10px 20px;
        display: flex;
        align-items: center;
    }

    .search-bar input {
        border: none;
        background: none;
        outline: none;
        width: 100%;
        padding-left: 10px;
    }

    .table-container {
        background-color: #fff;
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .badge-custom {
        background-color: #000;
        color: #fff;
        padding: 5px 10px;
        border-radius: 20px;
    }

    .fa-trash {
        color: red;
        cursor: pointer;
    }
</style>

<div class="container">
    <div class="header-transaksi-bundling">
        <h1>LIST TRANSAKSI</h1>
    </div>
    <div class="table-container mt-4">
        <div class="search-bar mb-3">
            <i class="fas fa-search"></i>
            <input type="text" id="search-input" placeholder="Search Transaksi">
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>ID Transaksi</th>
                    <th>ID</th>
                    <th>ID Paket</th>
                    <th>Jumlah Pembayaran</th>
                    <th>Bukti Pembayaran</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody id="transaction-table-body">
                <!-- Data transaksi akan ditambahkan di sini -->
            </tbody>
        </table>
    </div>
</div>

<script>
    function getTransactions() {
        fetch('http://localhost:3000/admin/transaksi') // Endpoint untuk mengambil data transaksi
            .then(response => response.json())
            .then(data => {
                const tableBody = document.getElementById('transaction-table-body');
                tableBody.innerHTML = ''; // Hapus data sebelumnya

                data.forEach(transaction => {
                    // Format jumlah pembayaran
                    const formattedTotal = `Rp ${Number(transaction.Jumlah_Pembayaran).toLocaleString()}`;

                    // URL untuk gambar bukti pembayaran
                    const imageUrl = `http://localhost:3000/${transaction.Bukti_Pembayaran}`;

                    // Tambahkan baris ke tabel
                    const row = `
                    <tr>
                        <td>${transaction.ID_Transaksi}</td>
                        <td>${transaction.id}</td>
                        <td>${transaction.ID_Paket}</td>
                        <td>${formattedTotal}</td>
                        <td>
                            <img src="${imageUrl}" alt="Bukti Pembayaran"
                                 style="width: 100px; height: auto; cursor: pointer;"
                                 onclick="window.open('${imageUrl}', '_blank')">
                        </td>
                        <td>
                            <a href="/admin/delete" class="btn btn-delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                `;
                    tableBody.innerHTML += row;
                });
            })
            .catch(error => {
                console.error('Error fetching data:', error);
            });
    }

    // Panggil fungsi untuk menampilkan data transaksi saat halaman dimuat
    window.onload = function () {
        getTransactions();
    };
</script>